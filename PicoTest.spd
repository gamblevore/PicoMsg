#!/usr/local/bin/spd

// This is a pico example for Speedie, available at:
http://github.com/gamblevore/speedie
// You should definitely check out Speedie!

main
	|| p = pico.fork #require
	if (p.IsParent)
		p <~ ".lufsseccus eviecer dna dneS" // ask the child to decode this
		printline p.Get(2.0) // .get(x) waits at least x seconds
	  else
		p <~ "Child says: " + p.get(1.0).Reverse
